opam-version: "2.0"
maintainer: "andreashauptmann@t-online.de"
authors: [ "andreashauptmann@t-online.de" ]
license: "MIT"
homepage: "https://github.com/fdopen/uwt"
dev-repo: "git+https://github.com/fdopen/uwt.git"
bug-reports: "https://github.com/fdopen/uwt/issues"
tags: ["clib:libuv"]
build: ["omake" "-j%{jobs}%" "lib" "BUILD_LIBUV=true" "UWT_BUILD_JOBS=%{jobs}%"]
install: [
  ["omake" "opam-install" "PREFIX=%{prefix}%"]
  ["omake" "test"] {with-test}
]
remove: [
  ["rm" "-rf" "%{prefix}%/lib/uwt/uv"]
  ["ocamlfind" "remove" "uwt"]
  ["rm" "-rf" "%{prefix}%/doc/uwt"]
]
depends: [
  "base-unix"
  "base-bigarray"
  "base-threads"
  "base-bytes"
  "conf-autoconf" {build} # pin only
  "conf-pkg-config" {build}
  "ocamlfind" {build}
  "cppo" {build & >= "1.3"}
  "omake" {build}
  "result"
  "lwt" {>= "2.6.0"}
  "lwt_log" {with-test}
  "ocaml" {>= "4.02.1"}
  "ounit" {with-test & >= "2.0"}
  "ppx_deriving" {with-test & >= "2.0"}
  "ppx_import" {with-test & >= "1.0"}
]
